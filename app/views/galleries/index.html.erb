<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-start justify-between mb-8">
    <div>
      <h1 class="text-2xl font-semibold text-neutral-800 mb-2">Your Galleries</h1>
      <p class="text-neutral-500 text-sm">Browse and manage your family photo collections</p>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to providers_imports_path, class: "inline-flex items-center gap-2 bg-neutral-100 hover:bg-neutral-200 text-neutral-800 px-5 py-3 rounded-xl text-base font-medium transition-all" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
        </svg>
        <span>Import</span>
      <% end %>
      <%= link_to new_gallery_path, class: "inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-6 py-3 rounded-xl text-base font-semibold shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition-all" do %>
        <span class="text-lg">âœ¨</span>
        <span>New Gallery</span>
      <% end %>
    </div>
  </div>

  <% if @galleries.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <% @galleries.each do |gallery| %>
        <%= link_to gallery, class: "group block" do %>
          <div class="bg-white rounded-xl overflow-hidden border border-neutral-200 shadow-sm hover:shadow-xl hover:border-blue-200 hover:-translate-y-1 transition-all duration-300">
            <div class="aspect-[4/3] bg-neutral-100 relative overflow-hidden">
              <% if gallery.uploads.first&.file&.attached? %>
                <%= image_tag upload_variant_url(gallery.uploads.first, :medium),
                    class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500",
                    loading: "lazy" %>
                <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
              <% else %>
                <div class="flex items-center justify-center h-full text-neutral-300">
                  <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>
              <div class="absolute bottom-2 right-2 bg-black/70 backdrop-blur-sm text-white text-xs px-2 py-1 rounded">
                <%= gallery.uploads.count %>
              </div>
            </div>
            <div class="p-4">
              <h2 class="text-base font-medium text-neutral-800 group-hover:text-blue-600 transition-colors line-clamp-1">
                <%= gallery.title %>
              </h2>
              <div class="flex items-center justify-between mt-2 text-xs text-neutral-500">
                <span><%= gallery.user.name %></span>
                <span><%= time_ago_in_words(gallery.created_at) %> ago</span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-20">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-neutral-100 rounded-full mb-4">
        <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-neutral-800 mb-2">No galleries yet</h3>
      <p class="text-neutral-500 text-sm mb-6">Create your first gallery to start organizing photos</p>
      <%= link_to new_gallery_path, class: "inline-flex items-center space-x-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span>Create Gallery</span>
      <% end %>
    </div>
  <% end %>
</div>

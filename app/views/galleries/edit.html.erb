<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to @gallery, class: "inline-flex items-center text-sm text-white/60 hover:text-white transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back
    <% end %>
  </div>

  <h1 class="text-2xl font-semibold text-white mb-6">Edit Gallery</h1>

  <div class="bg-neutral-800/50 backdrop-blur-sm rounded-lg border border-white/10 p-6">
    <%= form_with model: @gallery, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-white/70 mb-2" %>
        <%= form.text_field :title, required: true, autofocus: true, class: "block w-full rounded-lg bg-neutral-900 border border-white/10 text-white px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        <% if @gallery.errors[:title].any? %>
          <p class="mt-2 text-sm text-red-400"><%= @gallery.errors[:title].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :description, "Description (optional)", class: "block text-sm font-medium text-white/70 mb-2" %>
        <%= form.text_area :description, rows: 4, class: "block w-full rounded-lg bg-neutral-900 border border-white/10 text-white px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" %>
        <% if @gallery.errors[:description].any? %>
          <p class="mt-2 text-sm text-red-400"><%= @gallery.errors[:description].first %></p>
        <% end %>
      </div>

      <div class="flex items-center justify-between pt-4">
        <%= link_to "Cancel", @gallery, class: "px-4 py-2 text-sm text-white/70 hover:text-white hover:bg-white/5 rounded-lg transition-colors" %>
        <%= form.submit "Save Changes", class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-medium transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

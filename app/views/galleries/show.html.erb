<%
  can_edit = current_user&.admin? || @gallery.user == current_user
  images_data = @uploads.map.with_index do |u, i|
    {
      id: u.id,
      index: i,
      title: u.title,
      caption: u.caption,
      date_taken: u.date_taken&.to_s,
      is_public: u.is_public,
      short_code: u.short_code,
      original: url_for(u.file),
      large: url_for(u.file.variant(resize_to_limit: [2048, 2048])),
      medium: url_for(u.file.variant(resize_to_limit: [1024, 1024])),
      small: url_for(u.file.variant(resize_to_limit: [640, 640]))
    }
  end
%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="lightbox"
     data-lightbox-images-value="<%= images_data.to_json %>"
     data-lightbox-can-edit-value="<%= can_edit %>"
     data-action="keydown@window->lightbox#keydown">

  <div class="mb-6">
    <%= link_to galleries_path, class: "inline-flex items-center text-sm text-neutral-500 hover:text-neutral-800 transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-neutral-200 shadow-sm p-6 mb-6">
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between">
      <div class="flex-1">
        <h1 class="text-2xl font-semibold text-neutral-800 mb-2"><%= @gallery.title %></h1>
        <% if @gallery.description.present? %>
          <p class="text-neutral-600 text-sm mb-3"><%= @gallery.description %></p>
        <% end %>
        <div class="flex items-center space-x-4 text-xs text-neutral-500">
          <span><%= @gallery.user.name %></span>
          <span>‚Ä¢</span>
          <span><%= pluralize(@gallery.uploads.count, 'photo') %></span>
          <span>‚Ä¢</span>
          <span><%= time_ago_in_words(@gallery.created_at) %> ago</span>
        </div>
      </div>
      <div class="flex items-center space-x-2 mt-4 lg:mt-0">
        <%= link_to edit_gallery_path(@gallery), class: "inline-flex items-center gap-1.5 px-4 py-2 text-sm text-neutral-700 hover:text-neutral-900 bg-neutral-100 hover:bg-neutral-200 rounded-lg transition-colors" do %>
          <span>‚úèÔ∏è</span>
          <span>Edit</span>
        <% end %>
        <%= button_to gallery_path(@gallery), method: :delete, data: { turbo_confirm: "Delete this gallery and all photos?" }, class: "inline-flex items-center gap-1.5 px-4 py-2 text-sm text-red-600 hover:text-red-700 bg-red-50 hover:bg-red-100 rounded-lg transition-colors" do %>
          <span>üóëÔ∏è</span>
          <span>Delete</span>
        <% end %>
      </div>
    </div>
  </div>

  <% if @uploads.any? %>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-2 mb-8">
      <% @uploads.each_with_index do |upload, index| %>
        <div id="<%= dom_id(upload) %>" class="group relative aspect-square bg-neutral-100 rounded-xl overflow-hidden shadow-sm hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200">
          <a href="#" data-action="click->lightbox#open" data-index="<%= index %>" class="block w-full h-full">
            <%= image_tag upload.file.variant(resize_to_fill: [400, 400]),
                class: "w-full h-full object-cover cursor-pointer",
                loading: "lazy",
                alt: upload.title,
                data: { upload_image: upload.id } %>
          </a>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none">
            <div class="absolute bottom-0 left-0 right-0 p-3" data-upload-overlay="<%= upload.id %>">
              <p class="text-white text-xs font-medium mb-1 <%= 'hidden' unless upload.title.present? %>" data-upload-title="<%= upload.id %>"><%= upload.title %></p>
              <div class="flex items-center justify-between">
                <span class="text-white/70 text-xs"><%= time_ago_in_words(upload.created_at) %> ago</span>
              </div>
            </div>
          </div>
          <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-auto">
            <%= button_to upload_path(upload), method: :delete, data: { turbo_confirm: "Delete this photo?" }, class: "p-1.5 bg-black/50 hover:bg-red-500/80 rounded-lg text-white transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="bg-white rounded-xl border border-neutral-200 shadow-sm p-6" data-controller="dropzone">
    <h2 class="text-lg font-medium text-neutral-800 mb-4">Upload Photos</h2>

    <%= form_with model: @upload, url: gallery_uploads_path(@gallery), multipart: true, class: "space-y-4", data: { dropzone_target: "form" } do |form| %>
      <div data-dropzone-target="dropzone"
           data-action="dragover->dropzone#dragover
                        dragenter->dropzone#dragenter
                        dragleave->dropzone#dragleave
                        drop->dropzone#drop
                        click->dropzone#clickToSelect"
           class="border-2 border-dashed border-neutral-300 rounded-xl p-8 text-center cursor-pointer hover:border-blue-400 hover:bg-blue-50 bg-neutral-50 transition-all duration-200">
        <div class="flex flex-col items-center">
          <svg class="w-12 h-12 text-neutral-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          <p class="text-neutral-600 text-sm mb-1">Drag and drop photos here</p>
          <p class="text-neutral-500 text-xs mb-3">or click to browse</p>
          <p class="text-neutral-400 text-xs">Supports: JPG, PNG, GIF, MP4 (max 10MB each)</p>
        </div>
        <%= form.file_field :file, accept: "image/*,video/*", multiple: true, class: "hidden", data: { dropzone_target: "input", action: "change->dropzone#handleFileSelect" } %>
      </div>

      <div data-dropzone-target="preview" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3"></div>

      <button type="button" data-action="click->dropzone#upload" data-dropzone-upload class="hidden w-full flex items-center justify-center space-x-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-sm font-medium transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
        </svg>
        <span>Upload Photos</span>
      </button>
    <% end %>
  </div>

  <!-- Lightbox Modal -->
  <div data-lightbox-target="modal"
       data-action="click->lightbox#close"
       class="hidden fixed inset-0 z-50 bg-black">

    <!-- Top bar -->
    <div class="absolute top-0 left-0 right-0 p-4 flex items-center justify-between z-20" data-action="click->lightbox#stopPropagation">
      <button data-action="click->lightbox#close" class="p-2 text-white/70 hover:text-white transition-colors rounded-lg hover:bg-white/10">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <span data-lightbox-target="counter" class="text-white/70 text-sm"></span>

      <div class="flex items-center gap-2">
        <% if can_edit %>
          <!-- Public toggle -->
          <label class="flex items-center gap-2 cursor-pointer px-2 py-1.5 rounded-lg hover:bg-white/10 transition-colors">
            <input type="checkbox"
                   data-lightbox-target="publicToggle"
                   data-action="change->lightbox#handlePublicToggle"
                   class="sr-only peer">
            <div class="relative w-8 h-4 bg-white/20 rounded-full peer peer-checked:bg-green-500 after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:rounded-full after:h-3 after:w-3 after:transition-all peer-checked:after:translate-x-4"></div>
            <span class="text-white/50 text-xs" data-lightbox-target="publicLabel">Private</span>
          </label>
          <!-- Copy link button -->
          <button type="button"
                  data-lightbox-target="copyLinkBtn"
                  data-action="click->lightbox#copyLink"
                  class="hidden items-center gap-1 px-2 py-1.5 text-xs text-white/70 hover:text-white hover:bg-white/10 rounded-lg transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
            <span data-lightbox-target="copyLinkText">Copy link</span>
          </button>
          <span data-lightbox-target="saveStatus" class="text-xs min-w-[50px]"></span>
          <div class="w-px h-5 bg-white/20"></div>
        <% end %>

        <!-- Download -->
        <div class="relative">
          <button data-action="click->lightbox#toggleDownload" class="p-2 text-white/70 hover:text-white transition-colors rounded-lg hover:bg-white/10">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
          </button>
          <div data-lightbox-target="downloadMenu" class="hidden absolute top-full right-0 mt-2 w-48 bg-neutral-900 border border-white/10 rounded-lg overflow-hidden shadow-xl">
          </div>
        </div>
      </div>
    </div>

    <!-- Image area -->
    <div class="absolute inset-0 flex items-center justify-center pt-16 pb-32" data-action="click->lightbox#stopPropagation">
      <button data-lightbox-target="prevBtn" data-action="click->lightbox#prev" class="absolute left-4 top-1/2 -translate-y-1/2 p-3 text-white/50 hover:text-white hover:bg-white/10 rounded-full transition-colors z-10">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <img data-lightbox-target="image" src="" alt="" class="max-w-[90vw] max-h-full object-contain">

      <button data-lightbox-target="nextBtn" data-action="click->lightbox#next" class="absolute right-4 top-1/2 -translate-y-1/2 p-3 text-white/50 hover:text-white hover:bg-white/10 rounded-full transition-colors z-10">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <!-- Bottom info/edit bar -->
    <div class="absolute bottom-0 left-0 right-0 z-20" data-action="click->lightbox#stopPropagation">
      <div class="bg-neutral-900 border-t border-white/10 px-6 py-4">
        <div class="max-w-3xl mx-auto">
          <% if can_edit %>
            <!-- Editable mode -->
            <div class="flex items-center gap-4 mb-2">
              <input type="text"
                     data-lightbox-target="titleInput"
                     data-action="input->lightbox#handleInput"
                     placeholder="Add a title..."
                     class="flex-1 bg-transparent text-white text-lg font-medium border-none outline-none placeholder-white/30">
              <input type="date"
                     data-lightbox-target="dateTakenInput"
                     data-action="change->lightbox#handleInput"
                     class="bg-white/5 text-white/70 text-sm border border-white/10 rounded px-2 py-1 outline-none focus:border-white/30">
            </div>
            <textarea data-lightbox-target="captionInput"
                      data-action="input->lightbox#handleInput"
                      placeholder="Tell the story behind this photo..."
                      rows="2"
                      class="w-full bg-transparent text-white/70 text-sm border-none outline-none placeholder-white/30 resize-none"></textarea>
          <% else %>
            <!-- Read-only mode -->
            <div class="flex items-center justify-between mb-1">
              <h3 data-lightbox-target="title" class="text-white text-lg font-medium"></h3>
              <span data-lightbox-target="dateTaken" class="text-white/50 text-sm"></span>
            </div>
            <p data-lightbox-target="caption" class="text-white/70 text-sm"></p>
            <p data-lightbox-target="noInfo" class="text-white/40 text-sm italic hidden">No title or caption</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

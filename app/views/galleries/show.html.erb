<%
  can_edit = current_user&.admin? || @gallery.user == current_user
  images_data = @uploads.map.with_index do |u, i|
    {
      id: u.id,
      index: i,
      title: u.title,
      caption: u.caption,
      original: url_for(u.file),
      large: url_for(u.file.variant(resize_to_limit: [2048, 2048])),
      medium: url_for(u.file.variant(resize_to_limit: [1024, 1024])),
      small: url_for(u.file.variant(resize_to_limit: [640, 640]))
    }
  end
%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="lightbox"
     data-lightbox-images-value="<%= images_data.to_json %>"
     data-lightbox-can-edit-value="<%= can_edit %>"
     data-action="keydown@window->lightbox#keydown">

  <div class="mb-6">
    <%= link_to galleries_path, class: "inline-flex items-center text-sm text-white/60 hover:text-white transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Galleries
    <% end %>
  </div>

  <div class="bg-neutral-800/50 backdrop-blur-sm rounded-lg border border-white/10 p-6 mb-6">
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between">
      <div class="flex-1">
        <h1 class="text-2xl font-semibold text-white mb-2"><%= @gallery.title %></h1>
        <% if @gallery.description.present? %>
          <p class="text-white/70 text-sm mb-3"><%= @gallery.description %></p>
        <% end %>
        <div class="flex items-center space-x-4 text-xs text-white/50">
          <span><%= @gallery.user.name %></span>
          <span>•</span>
          <span><%= pluralize(@gallery.uploads.count, 'photo') %></span>
          <span>•</span>
          <span><%= time_ago_in_words(@gallery.created_at) %> ago</span>
        </div>
      </div>
      <div class="flex items-center space-x-2 mt-4 lg:mt-0">
        <%= link_to edit_gallery_path(@gallery), class: "px-3 py-1.5 text-xs text-white/70 hover:text-white hover:bg-white/5 rounded-lg transition-colors" do %>
          Edit
        <% end %>
        <%= button_to gallery_path(@gallery), method: :delete, data: { turbo_confirm: "Delete this gallery and all photos?" }, class: "px-3 py-1.5 text-xs text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition-colors" do %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <% if @uploads.any? %>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-2 mb-8">
      <% @uploads.each_with_index do |upload, index| %>
        <div id="<%= dom_id(upload) %>" class="group relative aspect-square bg-neutral-800 rounded-lg overflow-hidden">
          <a href="#" data-action="click->lightbox#open" data-index="<%= index %>" class="block w-full h-full">
            <%= image_tag upload.file.variant(resize_to_fill: [400, 400]),
                class: "w-full h-full object-cover cursor-pointer",
                loading: "lazy",
                alt: upload.title %>
          </a>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/0 to-black/0 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none">
            <div class="absolute bottom-0 left-0 right-0 p-3">
              <% if upload.title.present? %>
                <p class="text-white text-xs font-medium mb-1"><%= upload.title %></p>
              <% end %>
              <div class="flex items-center justify-between">
                <span class="text-white/70 text-xs"><%= time_ago_in_words(upload.created_at) %> ago</span>
              </div>
            </div>
          </div>
          <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-auto">
            <%= button_to upload_path(upload), method: :delete, data: { turbo_confirm: "Delete this photo?" }, class: "p-1.5 bg-black/50 hover:bg-red-500/80 rounded-lg text-white transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="bg-neutral-800/50 backdrop-blur-sm rounded-lg border border-white/10 p-6" data-controller="dropzone">
    <h2 class="text-lg font-medium text-white mb-4">Upload Photos</h2>

    <%= form_with model: @upload, url: gallery_uploads_path(@gallery), multipart: true, class: "space-y-4", data: { dropzone_target: "form" } do |form| %>
      <div data-dropzone-target="dropzone"
           data-action="dragover->dropzone#dragover
                        dragenter->dropzone#dragenter
                        dragleave->dropzone#dragleave
                        drop->dropzone#drop
                        click->dropzone#clickToSelect"
           class="border-2 border-dashed border-white/20 rounded-lg p-8 text-center cursor-pointer hover:border-white/40 transition-colors">
        <div class="flex flex-col items-center">
          <svg class="w-12 h-12 text-white/40 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          <p class="text-white/70 text-sm mb-1">Drag and drop photos here</p>
          <p class="text-white/50 text-xs mb-3">or click to browse</p>
          <p class="text-white/40 text-xs">Supports: JPG, PNG, GIF, MP4 (max 10MB each)</p>
        </div>
        <%= form.file_field :file, accept: "image/*,video/*", multiple: true, class: "hidden", data: { dropzone_target: "input", action: "change->dropzone#handleFileSelect" } %>
      </div>

      <div data-dropzone-target="preview" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3"></div>

      <button type="button" data-action="click->dropzone#upload" data-dropzone-upload class="hidden w-full flex items-center justify-center space-x-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-sm font-medium transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
        </svg>
        <span>Upload Photos</span>
      </button>
    <% end %>
  </div>

  <!-- Lightbox Modal -->
  <div data-lightbox-target="modal"
       data-action="click->lightbox#close"
       class="hidden fixed inset-0 z-50 bg-black">

    <!-- Top bar -->
    <div class="absolute top-0 left-0 right-0 p-4 flex items-center justify-between z-20" data-action="click->lightbox#stopPropagation">
      <button data-action="click->lightbox#close" class="p-2 text-white/70 hover:text-white transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <span data-lightbox-target="counter" class="text-white/70 text-sm"></span>

      <div class="flex items-center space-x-1">
        <!-- Info toggle -->
        <button data-action="click->lightbox#toggleInfo" class="p-2 text-white/70 hover:text-white transition-colors" title="Photo info (i)">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </button>

        <!-- Download -->
        <div class="relative">
          <button data-action="click->lightbox#toggleDownload" class="p-2 text-white/70 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
          </button>
          <div data-lightbox-target="downloadMenu" class="hidden absolute top-full right-0 mt-2 w-48 bg-neutral-900 border border-white/10 rounded-lg overflow-hidden shadow-xl">
          </div>
        </div>
      </div>
    </div>

    <!-- Image area -->
    <div class="absolute inset-0 flex items-center justify-center" data-action="click->lightbox#stopPropagation">
      <button data-lightbox-target="prevBtn" data-action="click->lightbox#prev" class="absolute left-4 top-1/2 -translate-y-1/2 p-3 text-white/50 hover:text-white hover:bg-white/10 rounded-full transition-colors z-10">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <img data-lightbox-target="image" src="" alt="" class="max-w-[90vw] max-h-[90vh] object-contain">

      <button data-lightbox-target="nextBtn" data-action="click->lightbox#next" class="absolute right-4 top-1/2 -translate-y-1/2 p-3 text-white/50 hover:text-white hover:bg-white/10 rounded-full transition-colors z-10">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <!-- Slide-out info panel -->
    <div data-lightbox-target="infoPanel"
         data-action="click->lightbox#stopPropagation"
         class="absolute top-0 right-0 bottom-0 w-80 bg-neutral-900 border-l border-white/10 transform translate-x-full transition-transform duration-200 ease-out z-30 overflow-y-auto">

      <div class="p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-white/50 text-xs font-medium uppercase tracking-wider">Photo Details</h3>
          <button data-action="click->lightbox#toggleInfo" class="p-1 text-white/50 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <% if can_edit %>
          <!-- Editable fields -->
          <div class="space-y-4">
            <div>
              <label class="block text-white/50 text-xs font-medium mb-2">Title</label>
              <input type="text"
                     data-lightbox-target="titleInput"
                     data-action="input->lightbox#handleInput"
                     placeholder="Add a title..."
                     class="w-full bg-white/5 text-white text-sm rounded-lg px-3 py-2 border border-white/10 focus:border-white/30 focus:outline-none placeholder-white/30">
            </div>

            <div>
              <label class="block text-white/50 text-xs font-medium mb-2">Caption</label>
              <textarea data-lightbox-target="captionInput"
                        data-action="input->lightbox#handleInput"
                        placeholder="Tell the story behind this photo..."
                        rows="4"
                        class="w-full bg-white/5 text-white text-sm rounded-lg px-3 py-2 border border-white/10 focus:border-white/30 focus:outline-none placeholder-white/30 resize-none"></textarea>
            </div>

            <div class="pt-2">
              <span data-lightbox-target="saveStatus" class="text-xs"></span>
            </div>
          </div>
        <% else %>
          <!-- Read-only display -->
          <div class="space-y-4">
            <div>
              <h4 data-lightbox-target="title" class="text-white font-medium"></h4>
            </div>
            <div>
              <p data-lightbox-target="caption" class="text-white/70 text-sm"></p>
            </div>
          </div>
        <% end %>

        <div class="mt-8 pt-6 border-t border-white/10">
          <p class="text-white/30 text-xs">
            Press <kbd class="px-1.5 py-0.5 bg-white/10 rounded text-white/50">i</kbd> to toggle info
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

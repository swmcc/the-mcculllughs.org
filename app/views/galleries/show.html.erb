<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <%= link_to galleries_path, class: "text-blue-600 hover:text-blue-800 inline-flex items-center" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Galleries
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @gallery.title %></h1>
        <% if @gallery.description.present? %>
          <p class="text-gray-600 mt-2"><%= @gallery.description %></p>
        <% end %>
        <p class="text-sm text-gray-500 mt-4">Created by <%= @gallery.user.name %> <%= time_ago_in_words(@gallery.created_at) %> ago</p>
      </div>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_gallery_path(@gallery), class: "px-4 py-2 text-blue-600 hover:bg-blue-50 rounded-md" %>
        <%= button_to "Delete", gallery_path(@gallery), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "px-4 py-2 text-red-600 hover:bg-red-50 rounded-md" %>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Upload Photos</h2>
    <%= form_with model: @upload, url: gallery_uploads_path(@gallery), multipart: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :file, "Choose photos or videos", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.file_field :file, accept: "image/*,video/*", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
      </div>
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= form.label :caption, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :caption, rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <%= form.submit "Upload", class: "w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-medium shadow-sm transition-colors" %>
    <% end %>
  </div>

  <% if @uploads.any? %>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
      <% @uploads.each do |upload| %>
        <div class="group relative aspect-square bg-gray-200 rounded-lg overflow-hidden">
          <%= image_tag upload.file.variant(resize_to_fill: [400, 400]),
              class: "w-full h-full object-cover",
              loading: "lazy",
              alt: upload.title %>
          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-60 transition-opacity flex items-center justify-center">
            <div class="opacity-0 group-hover:opacity-100 transition-opacity space-x-2">
              <%= button_to upload_path(upload), method: :delete, data: { turbo_confirm: "Delete this photo?" }, class: "inline-flex items-center px-3 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md text-sm" do %>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow-md">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No photos yet</h3>
      <p class="mt-1 text-sm text-gray-500">Upload your first photo to get started.</p>
    </div>
  <% end %>
</div>

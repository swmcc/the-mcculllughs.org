<% content_for :head do %>
  <!-- Social Media Meta Tags -->
  <meta property="og:title" content="<%= @upload.title.presence || 'Shared Photo' %>">
  <meta property="og:description" content="<%= @upload.caption.presence || 'A photo shared from The McCulloughs' %>">
  <meta property="og:image" content="<%= url_for(@upload.file) %>">
  <meta property="og:type" content="website">
  <meta name="twitter:card" content="summary_large_image">
<% end %>

<div class="min-h-screen bg-black flex flex-col"
     data-controller="public-toggle"
     data-public-toggle-short-code-value="<%= @upload.short_code %>"
     data-public-toggle-is-public-value="<%= @upload.is_public? %>">
  <!-- Header -->
  <div class="p-4 flex items-center justify-between">
    <%= link_to root_path, class: "text-white/70 hover:text-white transition-colors" do %>
      <span class="text-sm">The McCulloughs</span>
    <% end %>

    <div class="flex items-center space-x-3">
      <% if @upload.date_taken.present? %>
        <span class="text-white/50 text-sm">
          <%= @upload.date_taken.strftime("%d %b %Y") %>
        </span>
      <% end %>

      <% if can_edit? %>
        <!-- Public toggle -->
        <div class="flex items-center gap-2">
          <label class="flex items-center gap-2 cursor-pointer group">
            <input type="checkbox"
                   data-public-toggle-target="checkbox"
                   data-action="change->public-toggle#toggle"
                   <%= "checked" if @upload.is_public? %>
                   class="sr-only peer">
            <div class="relative w-9 h-5 bg-white/20 rounded-full peer peer-checked:bg-green-500 after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:after:translate-x-full"></div>
            <span class="text-white/50 text-xs group-hover:text-white/70 transition-colors" data-public-toggle-target="label">
              <%= @upload.is_public? ? "Public" : "Private" %>
            </span>
          </label>
          <span data-public-toggle-target="status" class="text-xs"></span>
        </div>

        <div class="w-px h-5 bg-white/20"></div>
      <% end %>

      <%= link_to url_for(@upload.file), download: "", class: "p-2 text-white/70 hover:text-white hover:bg-white/10 rounded-lg transition-colors", title: "Download" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Photo -->
  <div class="flex-1 flex items-center justify-center p-4">
    <%= image_tag url_for(@upload.file),
        class: "max-w-full max-h-[80vh] object-contain",
        alt: @upload.title,
        loading: "eager" %>
  </div>

  <!-- Info -->
  <div class="p-6 bg-neutral-900 border-t border-white/10">
    <div class="max-w-3xl mx-auto">
      <% if @upload.title.present? %>
        <h1 class="text-white text-xl font-medium mb-2"><%= @upload.title %></h1>
      <% end %>

      <% if @upload.caption.present? %>
        <p class="text-white/70"><%= @upload.caption %></p>
      <% end %>

      <% if @upload.title.blank? && @upload.caption.blank? %>
        <p class="text-white/40 italic">Shared photo</p>
      <% end %>
    </div>
  </div>
</div>

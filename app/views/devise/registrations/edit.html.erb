<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to root_path, class: "inline-flex items-center text-sm text-neutral-500 hover:text-neutral-800 transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back
    <% end %>
  </div>

  <h1 class="text-2xl font-semibold text-neutral-800 mb-8">Settings</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Profile Section -->
  <div class="bg-white rounded-xl border border-neutral-200 shadow-sm p-6 mb-6">
    <h2 class="text-lg font-medium text-neutral-800 mb-4">Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :name, "Name", class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",
              class: "w-full bg-neutral-50 border border-neutral-300 rounded-lg px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full bg-neutral-50 border border-neutral-300 rounded-lg px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="mt-2 text-sm text-amber-600">Waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
        </div>

        <div class="pt-2">
          <%= f.submit "Save Profile", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Password Section -->
  <div class="bg-white rounded-xl border border-neutral-200 shadow-sm p-6 mb-6">
    <h2 class="text-lg font-medium text-neutral-800 mb-1">Change Password</h2>
    <p class="text-sm text-neutral-500 mb-4">Update your password to keep your account secure</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :current_password, "Current Password", class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.password_field :current_password, autocomplete: "current-password",
              class: "w-full bg-neutral-50 border border-neutral-300 rounded-lg px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-neutral-700 mb-2" do %>
            New Password
            <% if @minimum_password_length %>
              <span class="text-neutral-400 font-normal">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full bg-neutral-50 border border-neutral-300 rounded-lg px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full bg-neutral-50 border border-neutral-300 rounded-lg px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
        </div>

        <div class="pt-2">
          <%= f.submit "Update Password", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Spotify Integration -->
  <div class="bg-white rounded-xl border border-neutral-200 shadow-sm p-6 mb-6">
    <div class="flex items-center gap-2 mb-1">
      <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
      </svg>
      <h2 class="text-lg font-medium text-neutral-800">Spotify</h2>
    </div>
    <p class="text-sm text-neutral-500 mb-4">Add your Spotify API credentials to enable music during slideshows</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :spotify_client_id, "Client ID", class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.text_field :spotify_client_id, autocomplete: "off",
              placeholder: "From developer.spotify.com/dashboard",
              class: "w-full bg-neutral-50 border border-neutral-300 rounded-lg px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors" %>
        </div>

        <div>
          <%= f.label :spotify_client_secret, "Client Secret", class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.password_field :spotify_client_secret, autocomplete: "off",
              placeholder: resource.spotify_client_secret.present? ? "••••••••••••••••" : "From developer.spotify.com/dashboard",
              value: "",
              class: "w-full bg-neutral-50 border border-neutral-300 rounded-lg px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors" %>
          <% if resource.spotify_configured? %>
            <p class="mt-1 text-xs text-green-600">✓ Spotify is configured</p>
          <% else %>
            <p class="mt-1 text-xs text-neutral-500">Get credentials at <a href="https://developer.spotify.com/dashboard" target="_blank" class="text-green-600 hover:underline">developer.spotify.com/dashboard</a></p>
          <% end %>
        </div>

        <div class="pt-2">
          <%= f.submit "Save Spotify Settings", class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone -->
  <div class="bg-red-50 border border-red-200 rounded-xl p-6">
    <h2 class="text-lg font-medium text-red-700 mb-1">Delete Account</h2>
    <p class="text-sm text-neutral-600 mb-4">Permanently delete your account and all associated data. This cannot be undone.</p>
    <%= button_to "Delete My Account", registration_path(resource_name),
        data: { turbo_confirm: "Are you sure you want to delete your account? This cannot be undone." },
        method: :delete,
        class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors" %>
  </div>
</div>

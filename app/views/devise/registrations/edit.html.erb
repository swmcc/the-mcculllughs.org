<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to root_path, class: "inline-flex items-center text-sm text-white/60 hover:text-white transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back
    <% end %>
  </div>

  <h1 class="text-2xl font-semibold text-white mb-8">Settings</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Profile Section -->
  <div class="bg-neutral-800/50 backdrop-blur-sm rounded-lg border border-white/10 p-6 mb-6">
    <h2 class="text-lg font-medium text-white mb-4">Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :name, "Name", class: "block text-sm font-medium text-white/70 mb-2" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",
              class: "w-full bg-neutral-900 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-white/70 mb-2" %>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full bg-neutral-900 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="mt-2 text-sm text-amber-400">Waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
        </div>

        <div class="pt-2">
          <%= f.submit "Save Profile", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Password Section -->
  <div class="bg-neutral-800/50 backdrop-blur-sm rounded-lg border border-white/10 p-6 mb-6">
    <h2 class="text-lg font-medium text-white mb-1">Change Password</h2>
    <p class="text-sm text-white/50 mb-4">Update your password to keep your account secure</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :current_password, "Current Password", class: "block text-sm font-medium text-white/70 mb-2" %>
          <%= f.password_field :current_password, autocomplete: "current-password",
              class: "w-full bg-neutral-900 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-white/70 mb-2" do %>
            New Password
            <% if @minimum_password_length %>
              <span class="text-white/40 font-normal">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full bg-neutral-900 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-white/70 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full bg-neutral-900 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-white/30 focus:outline-none focus:border-white/30 transition-colors" %>
        </div>

        <div class="pt-2">
          <%= f.submit "Update Password", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone -->
  <div class="bg-red-500/5 border border-red-500/20 rounded-lg p-6">
    <h2 class="text-lg font-medium text-red-400 mb-1">Delete Account</h2>
    <p class="text-sm text-white/50 mb-4">Permanently delete your account and all associated data. This cannot be undone.</p>
    <%= button_to "Delete My Account", registration_path(resource_name),
        data: { turbo_confirm: "Are you sure you want to delete your account? This cannot be undone." },
        method: :delete,
        class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors" %>
  </div>
</div>

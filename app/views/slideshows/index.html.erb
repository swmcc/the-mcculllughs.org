<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-neutral-800"><%= current_user.admin? ? "All Slideshows" : "My Slideshows" %></h1>
  </div>

  <% if @slideshows.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @slideshows.each do |slideshow| %>
        <div class="bg-white rounded-xl border border-neutral-200 shadow-sm overflow-hidden hover:shadow-lg transition-shadow">
          <% if slideshow.uploads.any? %>
            <div class="aspect-video bg-neutral-100 overflow-hidden">
              <%= upload_picture_tag slideshow.uploads.first, :thumb,
                  class: "w-full h-full object-cover",
                  loading: "lazy" %>
            </div>
          <% else %>
            <div class="aspect-video bg-neutral-200 flex items-center justify-center">
              <span class="text-neutral-400">No photos</span>
            </div>
          <% end %>

          <div class="p-4">
            <h3 class="font-medium text-neutral-800 mb-1 truncate"><%= slideshow.title %></h3>
            <% if current_user.admin? %>
              <p class="text-xs text-purple-600 mb-1"><%= slideshow.user.name %></p>
            <% end %>
            <div class="flex items-center flex-wrap text-xs text-neutral-500 mb-3">
              <span><%= pluralize(slideshow.uploads.count, 'photo') %></span>
              <span class="mx-2">•</span>
              <span><%= pluralize(slideshow.view_count, 'view') %></span>
              <% if slideshow.audio.attached? %>
                <span class="mx-2">•</span>
                <svg class="w-4 h-4 text-blue-500 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                </svg>
              <% end %>
            </div>

            <div class="flex items-center gap-2">
              <%= link_to slideshow_path(slideshow), class: "flex-1 inline-flex items-center justify-center gap-1.5 px-3 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors" do %>
                <span>▶️</span>
                <span>Play</span>
              <% end %>
              <button type="button"
                      onclick="navigator.clipboard.writeText('<%= public_slideshow_url(slideshow.short_code) %>').then(() => this.innerHTML = '✓')"
                      class="px-3 py-2 text-sm text-neutral-600 hover:text-neutral-800 bg-neutral-100 hover:bg-neutral-200 rounded-lg transition-colors"
                      title="Copy share link">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
                </svg>
              </button>
              <%= button_to slideshow_path(slideshow), method: :delete, data: { turbo_confirm: "Delete this slideshow?" }, class: "px-3 py-2 text-sm text-red-600 hover:text-red-700 bg-red-50 hover:bg-red-100 rounded-lg transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl border border-neutral-200 shadow-sm p-12 text-center">
      <div class="w-16 h-16 bg-neutral-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-neutral-800 mb-2">No slideshows yet</h3>
      <p class="text-neutral-500 mb-4">Create a slideshow from any gallery to save it here.</p>
      <%= link_to "Browse Galleries", galleries_path, class: "inline-flex items-center gap-1.5 px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>

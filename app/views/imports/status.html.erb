<div class="max-w-2xl mx-auto px-4 py-8"
     data-controller="import-status"
     data-import-status-id-value="<%= @import.id %>"
     data-import-status-url-value="<%= status_import_path(@import) %>"
     data-import-status-complete-value="<%= @import.completed? || @import.failed? %>">

  <div class="mb-6">
    <%= link_to providers_imports_path, class: "inline-flex items-center text-sm text-neutral-500 hover:text-neutral-800 transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Import
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-neutral-200 shadow-sm p-6">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-xl font-semibold text-neutral-800">
        Importing: <%= @import.album_title || "Album" %>
      </h1>
      <span class="inline-flex px-3 py-1 text-sm rounded-full <%= status_badge_class(@import.status) %>">
        <%= @import.status.titleize %>
      </span>
    </div>

    <p class="text-sm text-neutral-500 mb-6">
      From <%= @import.provider.titleize %>
      <% if @import.started_at %>
        &middot; Started <%= time_ago_in_words(@import.started_at) %> ago
      <% end %>
    </p>

    <%= turbo_frame_tag "import_progress" do %>
      <div class="space-y-4">
        <% if @import.total_photos > 0 %>
          <div class="relative">
            <div class="w-full bg-neutral-200 rounded-full h-4 overflow-hidden">
              <div class="h-full rounded-full transition-all duration-500 <%= @import.failed? ? 'bg-red-500' : 'bg-blue-600' %>"
                   style="width: <%= @import.progress_percentage %>%">
              </div>
            </div>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-xs font-medium <%= @import.progress_percentage > 50 ? 'text-white' : 'text-neutral-600' %>">
                <%= @import.progress_percentage %>%
              </span>
            </div>
          </div>

          <div class="flex justify-between text-sm">
            <span class="text-green-600">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= @import.imported_count %> imported
            </span>
            <% if @import.failed_count > 0 %>
              <span class="text-red-500">
                <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
                <%= @import.failed_count %> failed
              </span>
            <% end %>
            <span class="text-neutral-500"><%= @import.total_photos %> total</span>
          </div>
        <% else %>
          <div class="flex items-center justify-center py-8">
            <svg class="animate-spin h-8 w-8 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="ml-3 text-neutral-500">Preparing import...</span>
          </div>
        <% end %>

        <% if @import.error_message.present? %>
          <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
            <p class="text-sm text-red-700"><%= @import.error_message %></p>
          </div>
        <% end %>

        <% if @import.completed? && @import.gallery %>
          <div class="pt-4 border-t border-neutral-200">
            <%= link_to gallery_path(@import.gallery),
                class: "inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-medium transition-colors" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              View Gallery
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

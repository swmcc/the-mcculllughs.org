<div class="max-w-xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to providers_imports_path, class: "inline-flex items-center text-sm text-neutral-500 hover:text-neutral-800 transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-neutral-200 shadow-sm p-6">
    <div class="flex items-center gap-3 mb-6">
      <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-blue-500 rounded-xl flex items-center justify-center">
        <span class="text-white text-xl font-bold">f</span>
      </div>
      <div>
        <h1 class="text-xl font-semibold text-neutral-800">Connect Flickr</h1>
        <p class="text-sm text-neutral-500">Enter your Flickr API credentials</p>
      </div>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
      <h3 class="text-sm font-medium text-blue-800 mb-2">How to get your API key:</h3>
      <ol class="text-sm text-blue-700 space-y-1 list-decimal list-inside">
        <li>Go to <a href="https://www.flickr.com/services/apps/create/" target="_blank" class="underline hover:text-blue-900">flickr.com/services/apps/create</a></li>
        <li>Click "Request an API Key" â†’ "Apply for Non-Commercial Key"</li>
        <li>Fill in an app name and description</li>
        <li>Copy the <strong>Key</strong> and <strong>Secret</strong> below</li>
      </ol>
    </div>

    <%= form_tag connect_imports_path(@provider_name), method: :get, class: "space-y-4" do %>
      <div>
        <label for="api_key" class="block text-sm font-medium text-neutral-700 mb-1">API Key</label>
        <%= text_field_tag :api_key, @connection.api_key,
            class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors",
            placeholder: "e.g. 1234567890abcdef1234567890abcdef",
            required: true %>
      </div>

      <div>
        <label for="api_secret" class="block text-sm font-medium text-neutral-700 mb-1">API Secret</label>
        <%= text_field_tag :api_secret, @connection.api_secret,
            class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors",
            placeholder: "e.g. abcdef123456",
            required: true %>
      </div>

      <div class="pt-4">
        <%= submit_tag "Connect to Flickr",
            class: "w-full px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-4 text-xs text-neutral-500 text-center">
      Your credentials are stored encrypted and only used to access your Flickr photos.
    </p>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to providers_imports_path, class: "inline-flex items-center text-sm text-neutral-500 hover:text-neutral-800 transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Providers
    <% end %>
  </div>

  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-semibold text-neutral-800 mb-2">
        Import from <%= @provider_name.titleize %>
      </h1>
      <p class="text-neutral-500 text-sm">
        Connected as <strong><%= current_user.connection_for(@provider_name).external_username %></strong>
      </p>
    </div>
    <%= button_to disconnect_imports_path(@provider_name), method: :delete, class: "text-sm text-red-600 hover:text-red-700 transition-colors" do %>
      Disconnect
    <% end %>
  </div>

  <%= turbo_frame_tag "albums" do %>
    <% if @albums.any? %>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 mb-8">
        <% @albums.each do |album| %>
          <div class="bg-white rounded-xl border border-neutral-200 shadow-sm overflow-hidden hover:shadow-lg transition-shadow">
            <div class="aspect-square bg-neutral-100">
              <% if album[:cover_url] %>
                <%= image_tag album[:cover_url], class: "w-full h-full object-cover", loading: "lazy" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-neutral-300">
                  <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="p-4">
              <h3 class="font-medium text-neutral-800 truncate mb-1"><%= album[:title] %></h3>
              <p class="text-sm text-neutral-500 mb-3"><%= album[:photo_count] %> photos</p>

              <% if @existing_imports.include?(album[:id]) %>
                <span class="inline-flex items-center px-3 py-1.5 text-xs bg-green-100 text-green-700 rounded-full">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Already imported
                </span>
              <% else %>
                <%= button_to import_imports_path(@provider_name),
                    params: { album_id: album[:id], album_title: album[:title] },
                    class: "w-full px-4 py-2 text-sm bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors",
                    data: { turbo_confirm: "Import #{album[:photo_count]} photos from '#{album[:title]}'?" } do %>
                  Import Album
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <% if @total_pages > 1 %>
        <nav class="flex justify-center items-center space-x-2">
          <% if @page > 1 %>
            <%= link_to albums_imports_path(@provider_name, page: @page - 1),
                class: "px-4 py-2 text-sm bg-neutral-100 hover:bg-neutral-200 rounded-lg transition-colors",
                data: { turbo_frame: "albums" } do %>
              &larr; Previous
            <% end %>
          <% end %>

          <span class="px-4 py-2 text-sm text-neutral-500">
            Page <%= @page %> of <%= @total_pages %>
          </span>

          <% if @page < @total_pages %>
            <%= link_to albums_imports_path(@provider_name, page: @page + 1),
                class: "px-4 py-2 text-sm bg-neutral-100 hover:bg-neutral-200 rounded-lg transition-colors",
                data: { turbo_frame: "albums" } do %>
              Next &rarr;
            <% end %>
          <% end %>
        </nav>
      <% end %>
    <% else %>
      <div class="text-center py-20">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-neutral-100 rounded-full mb-4">
          <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-neutral-800 mb-2">No albums found</h3>
        <p class="text-neutral-500 text-sm">This account doesn't have any photo albums to import.</p>
      </div>
    <% end %>
  <% end %>
</div>
